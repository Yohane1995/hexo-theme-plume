.pagination
  display flex
.page-nav
  & :first-child
    margin-left: 0;
    border-top-left-radius: 4px;
    border-bottom-left-radius: 4px;
  & :last-child
    margin-left: 0;
    border-top-right-radius: 4px;
    border-bottom-right-radius: 4px;
  & a,span
    position: relative;
    float: left;
    padding: 6px 12px;
    margin-left: -1px;
    line-height: 1.42857143;
    color: #337ab7;
    text-decoration: none;
    background-color: #fff;
    border: 1px solid #ddd;
