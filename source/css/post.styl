.post
  margin 20px
  padding 30px
  border-radius 10px
  box-shadow 0px 0px 10px #888888

.post-title
  text-align center
  font-size 30px
  margin 20px
  padding-bottom 10px
  border-bottom 1px solid black
.post-content
  border-bottom 1px solid black
.post-meta
  margin 20px
  margin-bottom 0px
  padding-top 10px


.highlight.plain
  width auto
  overflow auto
  & .line
    height 20px
  & pre
    border 0
    margin-bottom 0
