<% if (page.prev || page.next){ %>
<nav id="article-nav" class="article-nav">
  <ul class="pager">
  <% if (page.prev){ %>
      <li class="previous">
        <a href="<%- url_for(page.prev.path) %>" id="article-nav-newer" class="article-nav-link-wrap">
          <span aria-hidden="true">&larr;</span> prev
        </a>
        <span class="article-nav-title">
          <%= page.prev.title %>
       </span>
    </li>
  <% } %>
  <% if (page.next){ %>
    <li class="next">
      <a href="<%- url_for(page.next.path) %>" id="article-nav-older" class="article-nav-link-wrap">next
        <span aria-hidden="true">&rarr;
        </span>
      </a>
      <span class="article-nav-title"><%= page.next.title %></span>
    </li>
  <% } %>
  </ul>
</nav>
<% } %>
